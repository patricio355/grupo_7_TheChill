                                    <button type="submit"> <a href="/edit/<%= product.id %>">Comprar ahora</a></button>
                                    <form action="/carrito/add/<%= product.id %>" method="POST">
                                        <button type="submit">sAgregar al carrito</button></form>
                                 
                                <% } else { %>
                               
                                <% } %>
                            
                                <% if (userData.admin) { %>
                                  
                            <button type="submit"> <a href="/edit/<%= product.id %>">Editar Producto</a></button>
                            <form action="/delete/<%= product.id %>" method="POST">
                                <button type="submit" style="background-color: brown; color: aliceblue;">Eliminar</button></form>
                                
                                  
                                <% } %>
                              <% } else { %>
                                <button type="submit"> <a href="/edit/<%= product.id %>">Comprar ahora</a></button>
                                <button type="submit"> <a href="/edit/<%= product.id %>">Agregar al carrito</a></button>
                              <% } %>



                           
                            
                        </div>
                        <a class="similar" href="#">Ver más producto similares</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <hr />
        </div>
        <div class="characteristic">
