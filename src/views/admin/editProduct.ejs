<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ("../partials/head.ejs") %>
        <title>Panel Administrador</title>
        <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <div class="admin-container">
        <section class="admin-navbar">
            <img src="/images/logoFinal.png" width="200px" alt="">
            <div class="admin-title">
                <p style="font-weight: 200; font-size: 28px;">PANEL ADMINISTRADOR - THE CHILL</p>
            </div>
            <div class="admin-icons">
                <i class="fas fa-user"></i>
                <i class="fas fa-chevron-right"></i>
            </div>
        </section>
        <section class="admin-navigate-menu">
          
        </section>
        <section class="admin-create-section">
            <div class="admin-create-title">
                <a href="/admin"><button class="back-button" style="cursor: pointer;"><i
                            class="fas fa-long-arrow-alt-left"></i></button></a>
                <div class="title-create">
                    <p>Volver a la lista de productos</p>
                    <h3>Edición producto...</h3>
                </div>
            </div>
            <form action="/edit/<%= productToEdit.id %>" method="post" enctype="multipart/form-data"
                class="admin-create-product">
                <div class="admin-create-parent">
                    <div class="create-description">
                        <div class="create-section">
                            <div class="generic-input-label">
                                <label for="productName">
                                    <h3>Nombre de producto</h3>
                                </label>
                                <input value="<%= locals.oldData && oldData.title ? oldData.title : productToEdit.title %>" type="text" id="title" name="title"
                                    placeholder="Ingrese el nombre del producto..."
                                    value="<%= locals.oldData ? oldData.title : '' %> "
                                    >
                                    <%if(locals.errors && errors.title){ %>
                                        <div class="text-danger"style="color: red">
                                            <%=errors.title.msg %>
                                        </div>
                                    <% } %>
                            </div>
                            <div class="generic-input-label">
                                <label for="productDescription">
                                    <h4>Descripción del producto</h4>
                                </label>
                                <input value="<%= locals.oldData && oldData.content ? oldData.content : productToEdit.content %>" type="text" id="content"
                                    name="content" placeholder="Ingrese descripción...">

                                    <%if(locals.errors && errors.content){ %>
                                        <div class="text-danger"style="color: red; font-size: 13px">
                                            <%=errors.content.msg %>
                                        </div>
                                <% } %>
                              
                            </div>
                        </div>
                        <div class="create-section">
                            <div class="generic-input-label">
                                <!-- <label for="category"><h4>Categoría de producto</h4></label>
                                <select value="<%= productToEdit.type%>" name="category" id="category">
                                    <option value="Deporte">Deporte</option>
                                    <option value="Interior">Interior</option>
                                    <option value="Jeans">Jeans</option>
                                    <option value="Formal">Formal</option>
                                    <option value="Vestido">Vestido</option>
                                    <option value="Remera">Remeras</option>
                                    <option value="Zapatilla">Zapatillas</option>
                                </select> -->
                                <label for="category">
                                    <h4>Categoría de producto</h4>
                                </label>
                                <select name="category" id="category">
                                    <option value="Deporte" <%=productToEdit.category==="Deporte" ? "selected" : "" %>
                                        >Deporte</option>
                                    <option value="Interior" <%=productToEdit.category==="Interior" ? "selected" : "" %>
                                        >Interior</option>
                                    <option value="Jeans" <%=productToEdit.category==="Jeans" ? "selected" : "" %>>Jeans
                                    </option>
                                    <option value="Formal" <%=productToEdit.category==="Formal" ? "selected" : "" %>
                                        >Formal</option>
                                    <option value="Vestido" <%=productToEdit.category==="Vestido" ? "selected" : "" %>
                                        >Vestido</option>
                                    <option value="Remera" <%=productToEdit.category==="Remera" ? "selected" : "" %>
                                        >Remeras</option>
                                    <option value="Zapatilla" <%=productToEdit.category==="Zapatilla" ? "selected" : ""
                                        %>>Zapatillas</option>
                                </select>
                            </div>
                        </div>
                        <div class="create-section">
                            <div class="generic-input-label">
                                <label for="stock">
                                    <h4>Stock</h4>
                                </label>
                                <input value="<%= locals.oldData && oldData.quantity ? oldData.quantity : productToEdit.quantity %>" type="number" id="quantity" name="quantity"
                                    placeholder="Ingrese el stock disponible...">
                                    <%if(locals.errors && errors.quantity){ %>
                                        <div class="text-danger"style="color: red; font-size: 13px">
                                            <%=errors.quantity.msg %>
                                        </div>
                                    <% } %>
                            </div>

                            <div class="generic-input-label">
                                <!-- <label for="size"><h4>Tamaño</h4></label>
                                    <select value="<%= productToEdit.size%>" name="size" id="size">
                                        <option value="XS">XS (Extra Pequeño)</option>
                                        <option value="S">S (Pequeño)</option>
                                        <option value="M">M (Mediano)</option>
                                        <option value="L">L (Grande)</option>
                                        <option value="XL">XL (Extra Grande)</option>
                                        <option value="XXL">XXL (Doble Extra Grande)</option>
                                        <option value="XXXL">XXXL (Triple Extra Grande)</option>
                                    </select> -->
                                <label for="size">
                                    <h4>Tamaño</h4>
                                </label>
                                <select name="size" id="size">
                                    <option value="XS" <%=productToEdit.size==="XS" ? "selected" : "" %>>XS (Extra
                                        Pequeño)</option>
                                    <option value="S" <%=productToEdit.size==="S" ? "selected" : "" %>>S (Pequeño)
                                    </option>
                                    <option value="M" <%=productToEdit.size==="M" ? "selected" : "" %>>M (Mediano)
                                    </option>
                                    <option value="L" <%=productToEdit.size==="L" ? "selected" : "" %>>L (Grande)
                                    </option>
                                    <option value="XL" <%=productToEdit.size==="XL" ? "selected" : "" %>>XL (Extra
                                        Grande)</option>
                                    <option value="XXL" <%=productToEdit.size==="XXL" ? "selected" : "" %>>XXL (Doble
                                        Extra Grande)</option>
                                    <option value="XXXL" <%=productToEdit.size==="XXXL" ? "selected" : "" %>>XXXL
                                        (Triple Extra Grande)</option>
                                </select>
                            </div>
                        </div>
                        <div class="create-section">
                            <h4>Precio</h4>
                            <div style="display: flex; gap: 10px;">
                                <div class="generic-input-label" style="width: 50%;">
                                    <label for="price">Precio Unitario</label>
                                    <input value="<%= locals.oldData && oldData.price ? oldData.price : productToEdit.price %>" type="number" id="price" name="price"
                                        placeholder="Ingrese precio por unidad...">
                                        <%if(locals.errors && errors.price){ %>
                                            <div class="text-danger"style="color: red; font-size: 13px">
                                                <%=errors.price.msg %>
                                            </div>
                                        <% } %>
                                </div>
                                <div class="generic-input-label" style="width: 50%;">
                                    <label for="tax">Descuento</label>
                                    <input value="<%= locals.oldData && oldData.discount ? oldData.discount : productToEdit.discount %>" type="number" id="discount"
                                        name="discount" placeholder="Ingrese descuento...">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="product-details">
                        <div class="create-section">
                            <div class="generic-input-label">
                                <h4>Imagen del producto</h4>
                                <img src="/images/<%= productToEdit.image %>"  width="200px" height="200px" alt="">
                               
                                <input type="file" id="image" name="image" value="<%= locals.oldData && oldData.image ? oldData.image : productToEdit.image %>"> 
                                <%= productToEdit.image %>
                                <!-- <div class="product-image">
                                    <img src="" alt="">
                                    <div class="product-image-duo">
                                        <img src="" alt="">
                                        <img src="" alt="">
                                    </div>
                                </div> -->
                            </div>
                        </div>

                        <!-- <div class="create-section">
                            <div class="generic-input-label">
                                <h4>Envío y entrega</h4>
                                <label for="shipping">Seleccione tipo de envío</label>
                                <select name="perfil" id="shipping">
                                    <option value="Gratis">Gratis</option>
                                    <option value="A retirar por domicilio">A retirar por domicilio</option>
                                    <option value="A cargo del comprador">A cargo del comprador</option>
                                </select>
                            </div>
                        </div> -->
                       
                        <div class="create-section">
                            <h4>Datos de Producto</h4>
                            <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                                <div class="generic-input-label" style="width: 50%;">
                                    <label for="brand">Marca</label>
                                    <input value="<%= locals.oldData && oldData.brand ? oldData.brand : productToEdit.brand %>" type="text" id="brand" name="brand"
                                        placeholder="Ingrese marca...">
                                        <%if(locals.errors && errors.brand){ %>
                                            <div class="text-danger"style="color: red; font-size: 13px">
                                                <%=errors.brand.msg %>
                                            </div>
                                        <% } %>
                                </div>
                                <div class="generic-input-label" style="width: 50%;">
                                    <!-- <label for="gender">Género</label>
                                    <select value="<%= productToEdit.gender%>" name="gender" id="gender">
                                        <option value="Hombre">Hombre</option>
                                        <option value="Mujer">Mujer</option>
                                        <option value="Unisex">Unisex</option>
                                    </select> -->
                                    <label for="gender">Género</label>
                                    <select name="gender" id="gender">
                                        <option value="Hombre" <%=productToEdit.gender==="Hombre" ? "selected" : "" %>
                                            >Hombre</option>
                                        <option value="Mujer" <%=productToEdit.gender==="Mujer" ? "selected" : "" %>
                                            >Mujer</option>
                                        <option value="Unisex" <%=productToEdit.gender==="Unisex" ? "selected" : "" %>
                                            >Unisex</option>
                                    </select>
                                </div>
                                <div class="generic-input-label" style="width: 50%;">
                                    <label for="tax">Modelo</label>
                                    <input value="<%= locals.oldData && oldData.model_name ? oldData.model_name : productToEdit.model_name %>" type="text" id="model_name"
                                        name="model_name" placeholder="Ingrese modelo...">
                                        <%if(locals.errors && errors.model_name){ %>
                                            <div class="text-danger"style="color: red; font-size: 13px">
                                                <%=errors.model_name.msg %>
                                            </div>
                                        <% } %>
                                </div>
                                <div class="generic-input-label" style="width: 100%;">
                                    <label for="color">Color</label>
                                    <input value="<%= productToEdit.colour%>" type="color" id="colour" name="colour"
                                        style="padding: none; height: 40px;" value="#000">
                                </div>
                            </div>
                        </div>



                        <div class="admin-create-buttons">
                            <button class="btn btn-success" type="submit">Guardar cambios</button>
                            <a href="/admin"><button style="background-color: #EA5455;">Descartar Cambios</button></a>
                            
                            
                        </div>
                    </div>
                </div>
            </form>
            <a href="/"><button style="background-color: #EA5455;">Descartar Cambios</button></a>
        </section>
    </div>
</body>

</html>