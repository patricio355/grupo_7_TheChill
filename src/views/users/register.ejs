<html lang="en">

<head>
    <%- include ("../partials/head.ejs")  %>
    <title>Registrate! - The Chill</title>
    <link rel="stylesheet" href="css\register.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>

<body>
    <%- include ("../partials/navbar.ejs") %>

    <!-- CONTENIDO PRINCIPAL DEL REGISTER -->
    <main>
        <section class="mainregister">
            <article class="login">
                <div class="user">
                    <div class="user-icon">
                        <img src="images/logoFinal.png" alt="">
                    </div>
                    <form action="../home/index.ejs" method="post" class="user-ingreso">
                        <h1>Registrarte</h1>
                        <h4>Es rápido y fácil</h4>
                        <div class="nombrePersona">
                            <div class="user-input">
                                <label for="usuario">Nombre</label>
                                <input type="text" name="usuario" id="usuario" placeholder="Juan Carlos">
                            </div>
                            <div class="user-input">
                                <label for="lastName">Apellido</label>
                                <input type="text" name="lastName" id="lastName" placeholder="Pérez">
                            </div>
                        </div>
                        <div class="emailPerson">
                            <div class="email-input">
                                <label for="email">E-mail</label>
                                <input type="text" name="email" id="email" placeholder="example@gmail.com">
                            </div>
                            <div class="email-input">
                                <label for="confirmed-email">Confirmar E-mail</label>
                                <input type="text" name="confirmed-email" id="confirmed-email" placeholder="example@gmail.com">
                            </div>
                        </div>
                        <div class="password-input">
                            <label for="pass">Contraseña</label>
                            <input type="password" name="pass" id="pass" placeholder="password">
                        </div>
                        <div class="password-input">
                            <label for="confirmed-pass">Confirmar contraseña</label>
                            <input type="password" name="confirmed-pass" id="confirmed-pass" placeholder="password">
                        </div>

                        <button type="submit" class="ingresar">REGISTRARSE</button>

                        <a href="/login" class="contraseña">¿Ya estás registrado?</a>
                    </form>
                </div>
            </article>
        </section>
    </main>

    <%- include ("../partials/footer.ejs") %>
</body>

</html>